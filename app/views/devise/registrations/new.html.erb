<div class="container py-1 d-flex align-items-center">
  <div class="row justify-content-center w-100">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-5">
          <h2 class="h3 card-title text-center mb-4 fw-bold text-dark">Sign up</h2>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <div class="row">
                <div class="col-md-6">
                  <%= f.input :first_name,
                              required: true,
                              input_html: { class: "rounded-3" },
                              label_html: { class: "form-label fw-medium" } %>
                </div>
                <div class="col-md-6">
                  <%= f.input :last_name,
                              required: true,
                              input_html: { class: "rounded-3" },
                              label_html: { class: "form-label fw-medium" } %>
                </div>
              </div>

              <%= f.input :email,
                          required: true,
                          input_html: {
                            autocomplete: "email",
                            class: "rounded-3"
                          },
                          label_html: { class: "form-label fw-medium" } %>

              <%= f.input :password,
                          required: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: {
                            autocomplete: "new-password",
                            class: "rounded-3"
                          },
                          label_html: { class: "form-label fw-medium" } %>

              <%= f.input :password_confirmation,
                          required: true,
                          input_html: {
                            autocomplete: "new-password",
                            class: "rounded-3"
                          },
                          label_html: { class: "form-label fw-medium" } %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Sign up",
                           class: "btn btn-primary w-100 rounded-3 px-4 py-2 fw-medium" %>
            </div>
          <% end %>

          <hr class="my-4">

          <div class="text-center small text-muted">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
