<%= link_to "â† Back to all exercises", exercises_path, class: "text-decoration-none" %>

<div class="container mt-4">
  <div class="row">
    <div class="col">
      <h1><%= @exercise.name %></h1>
      <p class="text-muted"><%= @exercise.language.upcase %></p>
      <%= simple_format(@exercise.content) %>
    </div>

    <div class="col-md-3">
      <h2>Chats</h2>

      <div class="mb-4">
        <% if @chats.any? %>
          <ul class="list-unstyled">
            <% @chats.each do |chat| %>
              <li class="mb-2"><%= link_to chat.title, chat_path(chat) %></li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-muted">There are no chats yet.</p>
        <% end %>
      </div>

      <%= button_to "New chat", exercise_chats_path(@exercise), method: :post, class: "btn btn-primary w-100" %>
    </div>
  </div>
</div>
