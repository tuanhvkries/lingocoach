<div class="exercises-header">
  <h2 class="mb-4">New Exercise</h2>
</div>

<div class="exercises-new-container">
  <%= simple_form_for @exercise do |f| %>

    <%= f.input :name, placeholder: "English â€” Past tense" %>

    <div data-controller="flag" class="mb-3">
      <label class="form-label">Language *</label>

      <div class="d-flex align-items-center gap-2">
        <%= f.text_field :language,
              class: "form-control",
              placeholder: "en / fr / es",
              data: {
                flag_target: "input",
                action: "input->flag#update"
              } %>

        <img data-flag-target="img"
             width="32"
             height="24"
             class="rounded"
             style="display:none;" />
      </div>
    </div>

    <%= f.input :content, as: :text, input_html: { rows: 5 }, placeholder: "Instructions the learner will see..." %>
    <%= f.input :system_prompt, as: :text, input_html: { rows: 6 }, placeholder: "How the AI should behave for this exercise..." %>

    <%= f.button :submit, "Create exercise", class: "btn-second" %>
  <% end %>
</div>
